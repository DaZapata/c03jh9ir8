<a href="http://localhost:3000/actors/new">Crear Actor</a>
<table class="table-striped">
	<thead>
		<tr>
			<th >Foto</th>
			<th >Nombre</th>
			<th >Bio</th>
			<th >Fecha de Nacimiento</th>
			<th >Lugar de Nacimiento</th>
			<th >Fecha de fallecimiento</th>
			<th >Lugar de fallecimiento</th>
		</tr>
	</thead>
	<tbody>

		<% @actores.each do |actor| %>
		<tr>
			<td><img src="<%= actor['image_url'] %>" alt=""></td>
			<td><%= actor['name'] %></td>
			<td><%= actor['bio'] %></td>
			<td><%= actor['birth_date'] %></td>
			<td><%= actor['birth_place'] %></td>
			<% if actor['alive'] %>

			<td>N/A</td>
			<td>N/A</td>

			<% else %>

			<td><%= actor['death_date'] %></td>
			<td><%= actor['death_place'] %></td>

			<% end %>

		</tr>
		<% end %>

	</tbody>
</table>
